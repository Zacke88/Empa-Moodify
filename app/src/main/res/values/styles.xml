<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#F14C38</item>
        <item name="android:actionBarStyle">@style/MoodifyActionBar</item>
        <item name="android:windowBackground">@color/background_holo_light</item>

    </style>

    <style name="Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:colorBackground">#000000</item>

    </style>

    <style name="MoodifyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#144955</item>
        <item name="android:titleTextStyle">@style/MoodifyActionBarTitleTextStyle</item>
    </style>

    <style name="MoodifyActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>



</resources>
